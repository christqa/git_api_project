{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "generateRoutes": "tsoa spec-and-routes -c tsoa-config.js",
    "start": "yarn generateRoutes && ts-node src/app.ts",
    "migrate": "prisma migrate deploy",
    "start:dev": "nodemon",
    "prisma:format": "prisma format",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:generate-report": "yarn lint:check -f json-relative -o ./eslint-report.json",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "rimraf build",
    "copy-files": "copyfiles -u 1 src/**/*.{html,css,svg,liquid} src/templates/**/*.js src/i18n/*.json build/",
    "build": "yarn clean && yarn generateRoutes && tsc && tsc-alias && yarn copy-files",
    "prepare": "husky install",
    "test": "yarn generateRoutes && jest --config jest-test.config.ts",
    "api-test": "yarn generateRoutes && jest --config jest-api-test.config.ts ./src/test/api-test-cases --logHeapUsage",
    "test:coverage": "yarn generateRoutes && jest --config jest-all-test.config.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/projectspectra/api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/projectspectra/api/issues"
  },
  "homepage": "https://github.com/projectspectra/api#readme",
  "dependencies": {
    "@aws-sdk/client-sns": "^3.350.0",
    "@aws-sdk/client-sqs": "^3.350.0",
    "@cosva-lab/aws-xray-sdk-prisma": "^0.0.7",
    "@joi/date": "^2.1.0",
    "@prisma/client": "^4.15.0",
    "auth0": "^3.2.0",
    "aws-xray-sdk": "^3.5.0",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-basic-auth": "^1.2.1",
    "helmet": "^5.0.2",
    "http-status": "^1.5.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^9.0.0",
    "jwks-rsa": "^2.0.5",
    "liquidjs": "^10.0.0",
    "moment-timezone": "^0.5.43",
    "momentjs": "^2.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sanitize-html": "^2.7.0",
    "serialize-error": "8.1.0",
    "supertest": "^6.2.4",
    "swagger-ui-express": "^4.3.0",
    "tsoa": "^4.0.0",
    "unleash-client": "^3.18.1",
    "uuid": "^9.0.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/auth0": "^2.34.17",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/sanitize-html": "^2.6.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-formatter-json-relative": "^0.1.0",
    "eslint-plugin-use-decorator": "^0.2.0",
    "husky": "^7.0.4",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "prisma": "^4.15.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.2"
  }
}
